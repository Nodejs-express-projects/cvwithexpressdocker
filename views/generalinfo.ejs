<!-- Hero section start -->
<section class="hero-section spad">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 offset-xl-1">
        <div class="row">
          <div class="col-lg-6">
            <div class="hero-text">
              <h2><%= personaldata.name %></h2>
              <p><%= personaldata.descr %></p>
            </div>
            <div class="hero-info">
              <h2>General Info</h2>
              <ul>
                <li><span>Date of Birth</span><%= generalinfo.dob %></li>
                <li><span>Address</span><%=generalinfo.address %></li>
                <li><span>E-mail</span><%= generalinfo.email %></li>
                <li><span>Phone </span><%= generalinfo.phone %></li>
              </ul>
            </div>
          </div>
          <div class="col-lg-6">
            <figure class="hero-image">
              <img src="img/hero.jpg" alt="5" />
            </figure>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
